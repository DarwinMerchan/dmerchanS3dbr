<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dmerchanS2dbr.Operaciones">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sistema Calificaciones" TextColor="Black" FontSize="30" HorizontalTextAlignment="Center"/>
            <Label Text="PARCIAL 1" TextColor="Red" FontSize="20"/> 
            <Entry Placeholder="NOTASEG1" x:Name="NOTA1" Keyboard="Numeric"/>
            <Entry Placeholder="NOTAEXAM1" x:Name="NOTA2" Keyboard="Numeric"/>

            <Label Text="PARCIAL 2" TextColor="Red" FontSize="20"/>
            
            <Entry Placeholder="NOTASEG2" x:Name="NOTA3" Keyboard="Numeric"/>
            <Entry Placeholder="NOTAEXAM2" x:Name="NOTA4" Keyboard="Numeric"/>
            <Button Text="Resultado Final" Clicked="Button_Clicked" Background="orange" FontSize="20"/>
            <Entry Placeholder="Resultado" x:Name="Resultado"/>
        </StackLayout>                              
    </ContentPage.Content>
</ContentPage>